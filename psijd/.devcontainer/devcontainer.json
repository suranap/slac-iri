// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "PSI/J Service - Kubernetes Dev",
	// devcontainer.json
	"build": {
	  "dockerfile": "../Dockerfile",
	  "context": ".."
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"username": "vscode",
			"uid": "1000",
			"gid": "1000"
		},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
        	"packages": "curl,procps"
    	},
		"ghcr.io/devcontainers-extra/features/ripgrep:1": {}
	},
	"remoteUser": "vscode",

	// Mount the workspace and Docker socket
	// "mounts": [
	// 	"source=${localWorkspaceFolder}/..,target=/opt,type=bind,consistency=cached",
	// 	"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	// ],
	// "workspaceFolder": "/opt/psijd",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		5000,
		8000
	],
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.vscode-json",
				"ms-vscode.vscode-typescript-next",
				"ms-azuretools.vscode-docker",
				"1Password.op-vscode"
			]
		}
	},

	"workspaceFolder": "/workspaces/psijd",

	// This command will run after the container is created.
	// "postCreateCommand": "pip install --user -r requirements.txt",
	"postCreateCommand": "git config --global credential.helper '!op-cli'",
	// Use a different command to run in dev mode.
	"overrideCommand": false,

	// Mount the 1Password socket
	"mounts": [
		"source=${env:HOME}/.1password/agent.sock,target=/home/vscode/.1password/agent.sock,type=bind"
	],

	"containerEnv": {
		// "SLURM_RESTD_URL": "http://slurm-restapi.slurm"
		"SLURM_RESTD_URL": "http://host.docker.internal:6820",
		"PYTHONPATH": "/workspaces/psijd"
	}
}
