// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "PSI/J Service",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "psijd-debug",

	// IMPORTANT: mount the parent of your psijd folder (where .git lives) into /opt
	"mounts": [
		"source=${localWorkspaceFolder}/..,target=/opt,type=bind,consistency=cached"
	],
	// keep your workspace pointed at the psijd sub-folder
	"workspaceFolder": "/opt/psijd",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		10050
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker"
			]
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r requirements.txt"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
